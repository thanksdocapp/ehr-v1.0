APP_NAME="NewWaves Hospital Management System"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yourdomain.com

# Logging Configuration
LOG_CHANNEL=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration - Configured during installation wizard
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_username
DB_PASSWORD=your_database_password

# System Configuration
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=public
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=false

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Email Configuration - Configure in Admin Panel > Email Settings
# These are fallback defaults - admin can update via web interface
MAIL_MAILER=smtp
MAIL_HOST=mail.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Hospital Management System Settings
HOSPITAL_NAME="NewWaves Hospital"
HOSPITAL_TAGLINE="Leading Healthcare Excellence"
HOSPITAL_ADDRESS="123 Medical Center Drive, Healthcare City, HC 12345"
HOSPITAL_PHONE="+1 (555) 123-4567"
HOSPITAL_EMAIL="info@newwaveshospital.com"

# Payment Gateway Configuration - Configure in Admin Panel > Payment Settings
# These are just placeholders - actual credentials should be set in admin interface

# Stripe Configuration 
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=
CASHIER_CURRENCY=usd
CASHIER_CURRENCY_LOCALE=en_US

# PayPal Configuration
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_WEBHOOK_ID=

# Paystack Configuration (African Markets)
PAYSTACK_PUBLIC_KEY=
PAYSTACK_SECRET_KEY=
PAYSTACK_PAYMENT_URL=https://api.paystack.co
PAYSTACK_MERCHANT_EMAIL=

# Razorpay Configuration (Indian Markets)
RAZORPAY_KEY=
RAZORPAY_SECRET=

# Payment Processing Settings - All configurable via Admin Panel
PAYMENT_CURRENCY=USD
PAYMENT_CURRENCY_SYMBOL=$
MULTI_CURRENCY_SUPPORT=true
DEFAULT_PAYMENT_METHOD=stripe
ENABLE_PAYMENT_RETRY=true
PAYMENT_TIMEOUT=300

# Payment Features - All toggleable in Admin Panel
ENABLE_APPLE_PAY=false
ENABLE_GOOGLE_PAY=false
ENABLE_PAYMENT_PLANS=true
ENABLE_AUTO_PAY=false
MIN_PAYMENT_AMOUNT=1.00
MAX_PAYMENT_AMOUNT=50000.00

# SMS Configuration
SMS_DRIVER=log
SMS_API_KEY=
SMS_FROM_NUMBER=

# Notification Settings
NOTIFY_APPOINTMENTS=true
NOTIFY_PRESCRIPTIONS=true
NOTIFY_LAB_REPORTS=true
NOTIFY_BILLING=true
